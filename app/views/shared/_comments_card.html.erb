<div class="card">
  <div class="card-body">
    <% comments.each do |comment| %>
      <div class="d-flex justify-content-between w-100 border-bottom py-3 align-items-center">
        <p class="m-0"><b><%= comment.author.name %></b>: <%= comment.text %></p>
        <% unless @user.nil? || @post.nil? %>
          <%= link_to 'Delete', user_post_comment_path(user_id: @user.id, post_id: @post.id, id: comment.id), class: 'btn btn-danger', data: { turbo_method: :delete } if can? :destroy, comment %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>